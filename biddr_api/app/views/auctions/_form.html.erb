
  <%= form_for @auction do |f| %> 
  
    <div>
      <%= f.label :"Title*" %>
      </br>
      <%= f.text_area(
        :title,
        cols:50
       )%> 
    </div>

    <div>
      <%= f.label :"Description*" %>
      </br>
      <%= f.text_area(
        :description,
        cols:50
        )%>
    </div>

    <div>
      <%= f.label :"Ends at*"%>
      </br>
      <%= f.text_area(
        :ends_at,
        cols:50
       )%> 
    </div>

    <div>
      <%= f.label :"Reserve Price*" %>
      </br>
      <%= f.text_area(
        :reserve_price,
        cols:50
       )%> 
    </div>

   <%= f.submit "Save" %>
    
  <% end %>